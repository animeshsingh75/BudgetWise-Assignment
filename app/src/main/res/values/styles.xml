<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="FloatingActionButton" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name = "android:foreground">
            @drawable/ic_fab
        </item>
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>
    
    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>